@{
    ViewData["Title"] = "Privacy Settings";
}

<div class="content-card fade-in-up">
    <div class="text-center mb-4">
        <i class="fas fa-shield-alt" style="font-size: 3rem; color: #4f46e5;"></i>
        <h2 class="mt-3">Privacy Settings</h2>
        <p class="text-muted">Manage your privacy preferences and consent settings</p>
    </div>

    @if (ViewBag.ConsentGiven != null)
    {
        <div class="privacy-status mb-4">
            @if (ViewBag.ConsentGiven == true)
            {
                <div class="d-flex align-items-center justify-content-center gap-3 p-3" style="background: rgba(16, 185, 129, 0.1); border-radius: 12px;">
                    <i class="fas fa-check-circle" style="font-size: 2rem; color: #10b981;"></i>
                    <div>
                        <h5 class="mb-1" style="color: #10b981;">Privacy Policy Accepted</h5>
                        <p class="mb-0 text-muted">You have agreed to our privacy policies</p>
                    </div>
                </div>
            }
            else
            {
                <div class="d-flex align-items-center justify-content-center gap-3 p-3" style="background: rgba(245, 158, 11, 0.1); border-radius: 12px;">
                    <i class="fas fa-exclamation-circle" style="font-size: 2rem; color: #f59e0b;"></i>
                    <div>
                        <h5 class="mb-1" style="color: #f59e0b;">Privacy Policy Pending</h5>
                        <p class="mb-0 text-muted">Please review and accept our privacy policies</p>
                    </div>
                </div>
            }
        </div>
    }

    <div class="privacy-sections">
        <div class="info-item mb-4">
            <h5><i class="fas fa-user-shield me-2"></i>Data Collection</h5>
            <p class="text-muted mb-0">We collect and process your data to provide you with secure authentication services. This includes:</p>
            <ul class="mt-2 text-muted">
                <li>Basic profile information (name, email)</li>
                <li>Authentication data</li>
                <li>Login history and security events</li>
            </ul>
        </div>

        <div class="info-item mb-4">
            <h5><i class="fas fa-lock me-2"></i>Data Security</h5>
            <p class="text-muted mb-0">Your data is protected using industry-standard security measures:</p>
            <ul class="mt-2 text-muted">
                <li>Encryption in transit and at rest</li>
                <li>Secure authentication protocols</li>
                <li>Regular security audits</li>
            </ul>
        </div>

        <div class="info-item mb-4">
            <h5><i class="fas fa-share-alt me-2"></i>Data Sharing</h5>
            <p class="text-muted mb-0">We only share your data:</p>
            <ul class="mt-2 text-muted">
                <li>With services you explicitly authorize</li>
                <li>When required by law</li>
                <li>To protect our users and services</li>
            </ul>
        </div>
    </div>

    @if (ViewBag.ConsentGiven != true)
    {
        <div class="text-center mt-4">
            <button class="btn btn-modern" onclick="acceptPrivacyPolicy()">
                <i class="fas fa-check me-2"></i>Accept Privacy Policy
            </button>
        </div>
    }
</div>

@section Scripts {
    <script>
        function acceptPrivacyPolicy() {
            // Add your privacy policy acceptance logic here
            alert('Privacy policy acceptance functionality will be implemented here.');
            location.reload();
        }
    </script>
}
