<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SecureAuth</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/secureAuth0.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="modern-header">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-shield-alt me-2"></i>
                    <span class="brand-text">SecureAuth</span>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @* <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li> *@
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Auth0UserInfo">
                                    <i class="fas fa-user me-1"></i>Profile
                                </a>
                            </li>
                            <li class="nav-item" id="linkedAccountsNavItem" style="display: none;">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="LinkedAccountsInfo">
                                    <i class="fas fa-link me-1"></i>Linked Accounts
                                </a>
                            </li>
                        }
                    </ul>
                    
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle user-menu" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-1"></i>
                                    @{
                                        var displayName = User.Claims.FirstOrDefault(c => c.Type == "name")?.Value ?? 
                                                         User.Claims.FirstOrDefault(c => c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress")?.Value ?? 
                                                         "User";
                                    }
                                    @displayName
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Auth0UserInfo">
                                        <i class="fas fa-user me-2"></i>My Profile
                                    </a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="MyPrivacy">
                                        <i class="fas fa-shield-alt me-2"></i>Privacy Settings
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-area="" asp-controller="Account" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt me-2"></i>Sign Out
                                    </a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary login-btn" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Sign In
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="modern-footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 SecureAuth. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="footer-link">
                        <i class="fas fa-shield-alt me-1"></i>Privacy Policy
                    </a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        function checkMultipleAccounts() {
            console.log('checkMultipleAccounts function called');
            $.ajax({
                url: '/Account/CheckUnlinkedMultipleAccounts',
                type: 'GET',
                success: function(response) {
                    console.log('API response:', response);
                    if (response.hasMultipleAccounts && response.message) {
                        console.log('Multiple accounts found, showing popup...');
                        showMultipleAccountsPopup(response.message);
                    } else {
                        console.log('No multiple accounts found or no message');
                    }
                },
                error: function(xhr, status, error) {
                    console.log('Error checking multiple accounts:', error);
                    console.log('Status:', status);
                    console.log('Response:', xhr.responseText);
                }
            });
        }

        function checkLinkedAccounts() {
            $.ajax({
                url: '/Account/CheckMultipleAccounts',
                type: 'GET',
                success: function(response) {
                    console.log('Linked accounts check response:', response);
                    if (response.hasMultipleAccounts) {
                        console.log('Linked accounts found, showing button...');
                        $('#linkedAccountsNavItem').show();
                    } else {
                        console.log('No linked accounts found');
                        $('#linkedAccountsNavItem').hide();
                    }
                },
                error: function(xhr, status, error) {
                    console.log('Error checking linked accounts:', error);
                    $('#linkedAccountsNavItem').hide();
                }
            });
        }

        function showMultipleAccountsPopup(message) {
            console.log('showMultipleAccountsPopup called with message:', message);
            // Create modal HTML
            var modalHtml = `
                <div class="modal fade" id="multipleAccountsModal" tabindex="-1" role="dialog" aria-labelledby="multipleAccountsModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="multipleAccountsModalLabel">Multiple Accounts Found</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>${message}</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <a href="/Account/UsersByEmail" class="btn btn-primary">Go to Linked Accounts</a>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            // Add modal to body if it doesn't exist
            if ($('#multipleAccountsModal').length === 0) {
                console.log('Adding modal to body');
                $('body').append(modalHtml);
            }
            
            // Show the modal
            console.log('Showing modal...');
            var modal = new bootstrap.Modal(document.getElementById('multipleAccountsModal'));
            modal.show();
        }

        // Check for linked accounts when page loads (for authenticated users)
        $(document).ready(function() {
            if ($('#linkedAccountsNavItem').length > 0) {
                checkLinkedAccounts();
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>