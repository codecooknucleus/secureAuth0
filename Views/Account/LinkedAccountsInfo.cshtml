@model dynamic
@{
    ViewData["Title"] = "Linked Accounts";
}

<div class="container">
    <div class="content-card fade-in-up" style="max-width: 1000px;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2><i class="fas fa-link me-2"></i>Linked Accounts</h2>
                <p class="text-muted mb-0">View and manage your linked identity providers</p>
            </div>
            <a href="/Home/Index" class="btn btn-outline-modern">
                <i class="fas fa-arrow-left me-2"></i>Back to Home
            </a>
        </div>

        @if (Model.hasLinkedAccounts)
        {
            <div class="alert alert-success d-flex align-items-center mb-4" style="background: rgba(16, 185, 129, 0.1); border: 1px solid rgba(16, 185, 129, 0.2); border-radius: 12px;">
                <i class="fas fa-check-circle me-3" style="color: #10b981; font-size: 1.5rem;"></i>
                <div>
                    <strong>Accounts Successfully Linked</strong><br>
                    <span class="text-muted">Your accounts have been merged. You can sign in using any of the linked providers.</span>
                </div>
            </div>

            <!-- Primary Account Section -->
            <div class="mb-4">
                <h4 class="mb-3"><i class="fas fa-crown me-2" style="color: #f59e0b;"></i>Primary Account</h4>
                <div class="primary-account-card">
                    <div class="d-flex align-items-center gap-3">
                        <div class="primary-avatar">
                            @if (!string.IsNullOrEmpty(Model.primaryAccount.picture))
                            {
                                <img src="@Model.primaryAccount.picture" alt="Profile Picture" />
                            }
                            else
                            {
                                <div class="avatar-placeholder">
                                    @(!string.IsNullOrEmpty(Model.primaryAccount.name) ? Model.primaryAccount.name.ToString().FirstOrDefault().ToString().ToUpper() : "U")
                                </div>
                            }
                        </div>
                        
                        <div class="flex-grow-1">
                            <h5 class="mb-1">@Model.primaryAccount.name</h5>
                            <p class="text-muted mb-2">@Model.primaryAccount.email</p>
                            <div class="d-flex gap-3 text-sm text-muted">
                                <span><i class="fas fa-calendar me-1"></i>Created: @Model.primaryAccount.created_at</span>
                                <span><i class="fas fa-clock me-1"></i>Updated: @Model.primaryAccount.updated_at</span>
                            </div>
                        </div>
                        
                        <div class="primary-badge">
                            <i class="fas fa-crown me-1"></i>Primary
                        </div>
                    </div>
                    
                    <div class="mt-3 pt-3 border-top">
                        <small class="text-muted">User ID:</small>
                        <code class="ms-2">@Model.primaryAccount.userId</code>
                    </div>
                </div>
            </div>

            <!-- Linked Identities Section -->
            <div>
                <h4 class="mb-3">
                    <i class="fas fa-users me-2"></i>
                    Linked Identity Providers 
                    <span class="badge bg-primary ms-2">@Model.linkedAccounts.Count</span>
                </h4>
                
                <div class="row g-3">
                    @foreach (var account in Model.linkedAccounts)
                    {
                        <div class="col-md-6">
                            <div class="identity-card">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="provider-icon">
                                        <i class="fab fa-@(account.Provider == "google-oauth2" ? "google" : account.Provider == "facebook" ? "facebook" : account.Provider == "twitter" ? "twitter" : account.Provider == "github" ? "github" : "user")"></i>
                                    </div>
                                    
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@account.Provider</h6>
                                        <p class="text-muted mb-2 small">@account.Connection</p>
                                        
                                        <div class="d-flex align-items-center gap-2">
                                            @if (account.IsSocial)
                                            {
                                                <span class="identity-type social">
                                                    <i class="fas fa-share-alt me-1"></i>Social
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="identity-type local">
                                                    <i class="fas fa-database me-1"></i>Local
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mt-3 pt-3 border-top">
                                    <small class="text-muted">Provider User ID:</small>
                                    <code class="d-block mt-1 small">@account.UserId</code>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-unlink" style="font-size: 4rem; color: #64748b; margin-bottom: 1rem;"></i>
                <h4>No Linked Accounts</h4>
                <p class="text-muted mb-4">You don't have any linked accounts yet. If you have multiple accounts with the same email, you can link them together.</p>
                <a href="/Account/UsersByEmail" class="btn btn-modern">
                    <i class="fas fa-link me-2"></i>Manage Account Linking
                </a>
            </div>
        }

        @if (Model.error != null)
        {
            <div class="alert alert-danger d-flex align-items-center mt-4" style="background: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.2); border-radius: 12px;">
                <i class="fas fa-exclamation-triangle me-3" style="color: #ef4444; font-size: 1.5rem;"></i>
                <div>
                    <strong>Error</strong><br>
                    <span class="text-muted">@Model.error</span>
                </div>
            </div>
        }
    </div>
</div>

<style>
.primary-account-card {
    background: linear-gradient(135deg, rgba(79, 70, 229, 0.05), rgba(124, 58, 237, 0.05));
    border: 2px solid rgba(79, 70, 229, 0.1);
    border-radius: 16px;
    padding: 1.5rem;
}

.primary-avatar {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid #4f46e5;
}

.primary-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.avatar-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #4f46e5, #7c3aed);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 1.75rem;
}

.primary-badge {
    background: linear-gradient(135deg, #f59e0b, #d97706);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.875rem;
}

.identity-card {
    background: rgba(255, 255, 255, 0.8);
    border: 1px solid rgba(79, 70, 229, 0.1);
    border-radius: 12px;
    padding: 1.25rem;
    transition: all 0.3s ease;
    height: 100%;
}

.identity-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    border-color: rgba(79, 70, 229, 0.2);
}

.provider-icon {
    width: 50px;
    height: 50px;
    border-radius: 12px;
    background: linear-gradient(135deg, #4f46e5, #7c3aed);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
}

.identity-type {
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 500;
}

.identity-type.social {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
}

.identity-type.local {
    background: rgba(99, 102, 241, 0.1);
    color: #6366f1;
}

code {
    background: rgba(79, 70, 229, 0.1);
    color: #4f46e5;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    font-size: 0.875rem;
}
</style> 